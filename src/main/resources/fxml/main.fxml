<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tokenanalyzer.controllers.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="openFileMenuItem" mnemonicParsing="false" onAction="#handleOpenFile" text="Open File..." />
              <MenuItem fx:id="openMultipleFilesMenuItem" mnemonicParsing="false" onAction="#handleOpenMultipleFiles" text="Open Multiple Files..." />
                  <SeparatorMenuItem />
                  <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#handleAbout" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL" BorderPane.alignment="CENTER">
        <items>
          <VBox spacing="10.0">
            <children>
               <Label text="Input Text:" />
               <TextArea fx:id="inputTextArea" prefHeight="200.0" promptText="Enter text to analyze or use File menu to open a document..." wrapText="true" VBox.vgrow="ALWAYS" />
               <HBox alignment="CENTER" spacing="10.0">
                  <children>
                     <ComboBox fx:id="encodingComboBox" prefWidth="150.0" promptText="Claude Encoding" />
                     <Button fx:id="analyzeButton" mnemonicParsing="false" onAction="#handleAnalyze" text="Analyze" />
                     <Button fx:id="analyzeBatchButton" mnemonicParsing="false" onAction="#handleAnalyzeBatch" text="Analyze Batch" visible="false" />
                     <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" text="Clear" />
                  </children>
               </HBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
          </VBox>
          <VBox spacing="10.0">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10.0">
                  <children>
                     <Label text="Analysis Results:" />
                     <ProgressBar fx:id="batchProgressBar" prefWidth="200.0" visible="false" />
                     <Label fx:id="progressLabel" visible="false" />
                  </children>
               </HBox>
               <TabPane fx:id="resultsTabPane" VBox.vgrow="ALWAYS">
                 <tabs>
                   <Tab fx:id="singleResultTab" text="Single File Results" closable="false">
                     <content>
                       <TableView fx:id="resultsTable">
                         <columns>
                           <TableColumn fx:id="metricColumn" prefWidth="150.0" text="Metric" />
                           <TableColumn fx:id="valueColumn" prefWidth="100.0" text="Value" />
                           <TableColumn fx:id="descriptionColumn" prefWidth="350.0" text="Description" />
                         </columns>
                       </TableView>
                     </content>
                   </Tab>
                   <Tab fx:id="batchResultTab" text="Batch Results" closable="false" disable="true">
                     <content>
                       <VBox spacing="10.0">
                         <children>
                           <VBox fx:id="batchSummarySection" spacing="5.0" visible="false">
                             <children>
                               <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Batch Summary" />
                               <HBox spacing="20.0">
                                 <children>
                                   <VBox spacing="3.0">
                                     <children>
                                       <Label text="Files Processed:" />
                                       <Label fx:id="summaryFilesProcessed" style="-fx-font-weight: bold;" text="0" />
                                     </children>
                                   </VBox>
                                   <VBox spacing="3.0">
                                     <children>
                                       <Label text="Total Tokens:" />
                                       <Label fx:id="summaryTotalTokens" style="-fx-font-weight: bold;" text="0" />
                                     </children>
                                   </VBox>
                                   <VBox spacing="3.0">
                                     <children>
                                       <Label text="Average Tokens/File:" />
                                       <Label fx:id="summaryAvgTokens" style="-fx-font-weight: bold;" text="0" />
                                     </children>
                                   </VBox>
                                   <VBox spacing="3.0">
                                     <children>
                                       <Label text="Average Readability:" />
                                       <Label fx:id="summaryAvgReadability" style="-fx-font-weight: bold;" text="0.0" />
                                     </children>
                                   </VBox>
                                   <VBox spacing="3.0">
                                     <children>
                                       <Label text="Success Rate:" />
                                       <Label fx:id="summarySuccessRate" style="-fx-font-weight: bold;" text="0%" />
                                     </children>
                                   </VBox>
                                 </children>
                               </HBox>
                               <Separator />
                             </children>
                             <padding>
                               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                             </padding>
                           </VBox>
                           <TableView fx:id="batchResultsTable" VBox.vgrow="ALWAYS">
                             <columns>
                               <TableColumn fx:id="fileNameColumn" prefWidth="200.0" text="File Name" />
                               <TableColumn fx:id="fileTokensColumn" prefWidth="100.0" text="Tokens" />
                               <TableColumn fx:id="fileUniqueTokensColumn" prefWidth="100.0" text="Unique Tokens" />
                               <TableColumn fx:id="fileReadabilityColumn" prefWidth="120.0" text="Flesch Score" />
                               <TableColumn fx:id="fileComplexityColumn" prefWidth="120.0" text="Complexity" />
                               <TableColumn fx:id="fileStatusColumn" prefWidth="160.0" text="Status" />
                             </columns>
                           </TableView>
                         </children>
                         <padding>
                           <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                         </padding>
                       </VBox>
                     </content>
                   </Tab>
                 </tabs>
               </TabPane>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
          </VBox>
        </items>
      </SplitPane>
   </center>
   <bottom>
      <Label fx:id="statusLabel" text="Ready" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </bottom>
</BorderPane>